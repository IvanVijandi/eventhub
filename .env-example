# Configuración de Django
# Genera una nueva clave con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-ejemplo-de-clave-secreta-muy-larga-y-compleja-aqui-123456789

# Modo de depuración
# True: Muestra errores detallados (solo para desarrollo)
# False: Modo producción (oculta errores sensibles)
DEBUG=True

# Hosts permitidos para acceder a la aplicación
# Para desarrollo local, incluye localhost y 127.0.0.1
# Para producción, especifica los dominios reales
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
